<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Available Rides | Lifty</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>

  <!-- Bootstrap Navbar -->
  <nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Lifty</a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav ms-auto">
  <% if (session && session.userId) { %>
    <li class="nav-item"><a class="nav-link" href="/view-rides">My Rides</a></li>
    <li class="nav-item"><a class="nav-link" href="/add-child">Add a Child</a></li>
    <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
  <% } else { %>
    <li class="nav-item"><a class="nav-link" href="/register">Register</a></li>
    <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
  <% } %>
</ul>

      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container py-5">
    <h2 class="mb-4">ðŸš˜ Available Rides</h2>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Driver</th>
          <th>Pickup</th>
          <th>Dropoff</th>
          <th>Time</th>
          <th>Seats</th>
        </tr>
      </thead>
      <tbody>
        <% rides.forEach(r => { %>
          <tr>
            <td><%= r.driver_name %></td>
            <td><%= r.pickup_location %></td>
            <td><%= r.dropoff_location %></td>
            <td><%= new Date(r.pickup_time).toLocaleString() %></td>
            <td><%= r.seats_available %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

</body>
</html>
