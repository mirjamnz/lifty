<%- include('partials/header1') %>
<%- include('partials/navbar1') %>

  <!-- Rides Table -->
  <div class="container py-5">
    <h2 class="mb-4 text-center">ðŸš˜ Available Rides</h2>
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead class="table-primary">
          <tr>
            <th>Driver</th>
            <th>Pickup</th>
            <th>Dropoff</th>
            <th>Time</th>
            <th>Seats</th>
          </tr>
        </thead>
        <tbody>
          <% rides.forEach(r => { %>
            <tr>
              <td><%= r.driver_name %></td>
              <td><%= r.pickup_location %></td>
              <td><%= r.dropoff_location %></td>
              <td><%= new Date(r.pickup_time).toLocaleString() %></td>
              <td><%= r.seats_available %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Footer -->
  <footer class="bg-dark text-white py-4 mt-5">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h5><i class="fas fa-car-side me-2"></i>Lifty</h5>
          <p>Making kids transportation more efficient and eco-friendly for busy families.</p>
        </div>
        <div class="col-md-6 text-end">
          <p>&copy; 2025 Lifty. All rights reserved.</p>
        </div>
      </div>
    </div>
    
  <%- include('partials/footer1') %>